@model IEnumerable<BanTien.Models.SanPham>
<link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet" />



@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<p>
    @Html.ActionLink("Thêm sản phẩm", "Create")
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Tên sản phẩm
                        </th>

                        <th>
                            Số lượng
                        </th>
                        <th>
                            Đơn giá
                        </th>

                        <th>
                            Loại
                        </th>
                        <th>
                            Hình
                        </th>
                        <th>
                            Chức năng
                        </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            Tên sản phẩm
                        </th>

                        <th>
                            Số lượng
                        </th>
                        <th>
                            Đơn giá
                        </th>

                        <th>
                            Loại
                        </th>
                        <th>
                            Hình
                        </th>
                        <th>
                            Chức năng
                        </th>
                    </tr>
                </tfoot>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenTien)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.SoLuong)
                            </td>
                            <td>
                                @item.DonGia.Value.ToString("0#,0") &#8363;
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LoaiTien.TenLoai)
                            </td>
                            <td>
                                <img style="width:50px; height:50px" src="@Html.DisplayFor(modelItem => item.AnhMinhHoa)" />
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.MaTien }) |
                                @Html.ActionLink("Details", "Details", new { id = item.MaTien }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.MaTien })
                            </td>
                        </tr>
                    }
                    </tbody>
            </table>
        </div>

    </div>
    </div>

